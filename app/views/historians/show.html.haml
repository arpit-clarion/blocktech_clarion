- model_class = Historian
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:name)
      \:
  %dd= @historian.name
  %dt
    %strong
      = model_class.human_attribute_name(:address)
      \:
  %dd= @historian.address
  %dt
    %strong
      = model_class.human_attribute_name(:btc_tip_address)
      \:
  %dd= @historian.btc_tip_address
  %dt
    %strong
      = model_class.human_attribute_name(:bit_msg_address)
      \:
  %dd= @historian.bit_msg_address
  %dt
    %strong
      = model_class.human_attribute_name(:txn_id)
      \:
  %dd= link_to "Link to transaction ", "http://florincoin.info/explorer/tx/?txid=#{@historian.txn_id}",target: '_blank'
= link_to t('.back', :default => t("helpers.links.back")), historians_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_historian_path(@historian), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), historian_path(@historian), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
