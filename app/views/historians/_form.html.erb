    </div>
    <div class="control-group">
      <%= f.label :address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :address, value: 'F9zvg3nsA26ihoWW7Gyyu5kfVc7CS5YDYC', :class => 'form-control' %>
      </div>
      <%= error_span(@historian[:address]) %>
    </div>
    <div class="control-group">
      <%= f.label :btc_tip_address, :class => 'control-label' %>
      <div class="controls">
        <%= f.text_field :btc_tip_address, :class => 'form-control' %>
      </div>
      <%= error_span(@historian[:btc_tip_address]) %>
    </div>
    <div class="control-group">
      <%= f.label :bit_msg_address, :class => 'control-label' %>
