        <%= f.text_field :bit_msg_address, value: 'F9zvg3nsA26ihoWW7Gyyu5kfVc7CS5YDYC', :class => 'form-control' %>
      </div>
      <%= error_span(@historian[:bit_msg_address]) %>
    </div>
