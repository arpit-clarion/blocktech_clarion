<%= form_for @historian, :html => { :class => "form-horizontal historian" } do |f| %>

    <% if @historian.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@historian.errors.count, "error") %> prohibited this historian from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @historian.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <p>
    <div class="control-group">
      <%= f.label :name, :class => 'control-label' %>
